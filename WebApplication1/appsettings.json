{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "IdentityOptions": {
    "Password": {
      "RequireDigit": true,
      "RequiredLength": 6,
      "RequireLowercase": true,
      "RequireNonAlphanumeric": false,
      "RequireUppercase": false
    },
    "SignIn": {
      "RequireConfirmedEmail": true
    },
    "User": {
      "RequireUniqueEmail": true
    }
  },

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Server=localhost;Database=MyAppDb;uid=sa;pwd=zz;TrustServerCertificate=True;"
  }
}
